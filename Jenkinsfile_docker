node
{
    def buildNumber = BUILD_NUMBER
    def mavenHome = tool name: "maven3.6.3" 
    stage('Git CheckOut')
    {
    git branch: 'development', credentialsId: '188c6cdf-f49d-4dc5-b0d5-722196064359', url: 'https://github.com/at-ec-projects/maven-web-application.git'
    }
    stage('Build')
    {
        sh "${mavenHome}/bin/mvn clean package"
    }
    stage('Build Docker image')
    {
    sh "docker build -t atecprojects/maven-web-application:${buildNumber} ."
    }
    stage('Push DockerImage To DockerRepository')
    {
    withCredentials([string(credentialsId: 'Docker_Hub_Pwd', variable: 'Docker_Hub_Pwd')])
    {
    sh "docker login -u atecprojects -p ${Docker_Hub_Pwd}"
    }
    sh "docker push atecprojects/maven-web-application:${buildNumber}"
    }
    stage('Upload DockerImage As A Container')
    sshagent(['Docker_Private_Key'])
    {
        sh "ssh -o StrictHostKeyChecking=no ubuntu@13.126.192.1 docker rm -f mavenwebapp || true"
        sh "ssh -o StrictHostKeyChecking=no ubuntu@13.126.192.1 docker run -d -p 8080:8080 --name mavenwebapp atecprojects/maven-web-application:${buildNumber}"
    }
}
